<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>assembly</id>
	<formats>
		<format>zip</format>
	</formats>
	<includeBaseDirectory>false</includeBaseDirectory>
	<fileSets>
		<fileSet>
			<directory>src/main/assembly/modules</directory>
			<outputDirectory>modules/business</outputDirectory>
		</fileSet>
		<fileSet>		    
			<directory>src/main/assembly/modules</directory>
			<outputDirectory>modules/web</outputDirectory>
		</fileSet>
		<fileSet>		    
			<directory>src/main/resources/persistence</directory>			
			<outputDirectory>modules/business/app-starter-config/persistence</outputDirectory>
			<filtered>true</filtered>
		</fileSet>		
		<fileSet>		    
			<directory>src/main/resources/web</directory>
			<outputDirectory>modules/web/app-starter-config</outputDirectory>
			<filtered>true</filtered>
		</fileSet>	
	</fileSets>	
</assembly>